<VirtualHost *:80>
    ServerName $SERVER_NAME
    ServerAlias $HOSTNAME.local $HOST_IP

    # Redirect all HTTP traffic to HTTPS
    Redirect permanent / https://$SERVER_NAME/
</VirtualHost>

<VirtualHost *:443>
    DocumentRoot "/var/www/html"
    ServerName $SERVER_NAME
    ServerAlias $HOSTNAME.local $HOST_IP

    SSLEngine on
    SSLCertificateFile "/certs/apache/apache-server.crt"
    SSLCertificateKeyFile "/certs/apache/apache-server.key"

    # Include the CA bundle
    SSLCertificateChainFile "/certs/root/SSL-root.crt"

    # Enable HSTS (Optional, for security)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    <Directory "/var/www/html">
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>